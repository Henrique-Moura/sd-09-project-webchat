<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Trybe - WebChat</title>
</head>

<body>
  <header>
    <h1>Trybe Chat</h1>
  </header>

  <p>Online:</p>
  <ul id='userList'></ul>

  <form id='nicknameForm'>
    <input type="text" id="nicknameInput" data-testid="nickname-box">
    <button id='nicknameButton' data-testid="nickname-button">Alterar apelido</button>
  </form>

  <form id='messageForm'>
    <input type="message" id="messageInput" data-testid='message-box'>
    <button id='sendMessageButton' data-testid='send-button'>Enviar</button>
  </form>

  <ul id='messages'>
    <% messageHistory.forEach((message) => {%>
    <li data-testid='message'><%= message %></li>
    <% }); %>
  </ul>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();

    const form = document.querySelector('#messageForm');
    const message = document.querySelector('#messageInput');

    const generateRandomNick = () => {
      const lengt = 16;
      const randomNick = `user${socket.id}`

      sessionStorage.setItem('nickname', randomNick.slice(0, 16));
    }

    socket.on('connect', () => {
      generateRandomNick();

      const nickname = sessionStorage.getItem('nickname');
      socket.emit('changeNickname', nickname);
    });

    const createMessage = (message) => {
      const messagesUl = document.querySelector('#messages');

      const li = document.createElement('li');
      li.setAttribute('data-testid', 'message');
      li.innerText = message;
      messagesUl.appendChild(li);
    };

    const createUserList = (userList) => {
      const userListUL = document.querySelector('#userList');
      const nickname = sessionStorage.getItem('nickname');

      userListUL.innerHTML = '';

      const users = Object.values(userList);

      const userIndex = users.indexOf(nickname);
      
      const currentUserli = document.createElement('li');
      currentUserli.setAttribute('data-testid', 'online-user');
      currentUserli.innerText = nickname;
      userListUL.appendChild(currentUserli);

      delete users[userIndex];

      users.forEach((user) => {
        const li = document.createElement('li');
        li.setAttribute('data-testid', 'online-user');
        li.innerText = user;
        userListUL.appendChild(li);
      });
    };

    const nicknameForm = document.querySelector('#nicknameForm');
    const nicknameInput = document.querySelector('#nicknameInput');

    nicknameForm.addEventListener('submit', (e) => {
      e.preventDefault();

      const newNickname = nicknameInput.value;
      socket.emit('changeNickname', newNickname);

      sessionStorage.setItem('nickname', newNickname);

      nicknameInput.value = '';
      return false;
    });

    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const nickname = sessionStorage.getItem('nickname');
      socket.emit('message', {
        chatMessage: message.value,
        nickname
      });
      message.value = '';

      return false;
    });

    socket.on('message', (mensagem) => createMessage(mensagem));
    socket.on('serverMessage', (mensagem) => createMessage(mensagem));
    socket.on('userList', (userList) => createUserList(userList));

    window.onbeforeunload = function (event) {
      socket.disconnect();
    };
  </script>
</body>

</html>
