<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Webchat</title>
    <link rel="stylesheet" href="./css/chat.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/chat.js"></script>
  </head>
  <body>
    <header>
      <p>Nickname: <span id="nickname"></span></p>
      <form>
        <input
          id="nickname-input"
          data-testid="nickname-box"
          type="text"
          autocomplete="off"
          placeholder="Mudar apelido"
        />
        <button
          type="button"
          id="change-btn"
          data-testid="nickname-button"
          onclick="changeNickname()"
        >
          Mudar
        </button>
      </form>
    </header>
    <main>
      <div class="main-chat">
        <aside class="online-users">
          <h4>Online Users</h4>
          <ul class="users"></ul>
        </aside>
        <ul class="messages"></ul>
      </div>
      <form class="messageInput">
        <input id="msg-text" data-testid="message-box" type="text" autocomplete="off" />
        <button id="send-btn" type="button" data-testid="send-button">
          Enviar
        </button>
      </form>
    </main>
  </body>
</html>
