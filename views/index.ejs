<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WebChat</title>
  <script src="/socket.io/socket.io.js"></script>
  <script src="client.js" defer></script>
</head>
<body> 

  <form action="" id="form">
    <fieldset>
      <legend>Apelido</legend>
      <input data-testid="nickname-box" id="nickname" placeholder="Escolha um apelido" />
      <button type="button" data-testid="nickname-button" id="saveNickname">Alterar</button>
    </fieldset>
    <fieldset>
      <legend>Mensagem</legend>
      <input data-testid="message-box" id="messageInput" placeholder="Digite uma mensagem" />
      <button type="submit" data-testid="send-button" id="sendMessage">Enviar</button>
    </fieldset>

    <ul id="onlineUsers"></ul>
    <ul id="messages"></ul>
</form>
</body>
</html>
